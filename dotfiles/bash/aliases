# File system
if command -v eza &> /dev/null; then
  alias ls='eza -lh --group-directories-first --icons=auto'
  alias lsa='ls -a'
  alias lt='eza --tree --level=2 --long --icons --git'
  alias lta='lt -a'
fi

alias ff="fzf --preview 'bat --style=numbers --color=always {}'"

if command -v zoxide &> /dev/null; then
  alias cd="zd"
  zd() {
    if [ $# -eq 0 ]; then
      builtin cd ~ && return
    elif [ -d "$1" ]; then
      builtin cd "$1"
    else
      z "$@" && printf "\U000F17A9 " && pwd || echo "Error: Directory not found"
    fi
  }
fi

open() {
  xdg-open "$@" >/dev/null 2>&1 &
}

# Directories
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Tools
alias d='docker'
alias r='rails'
n() { if [ "$#" -eq 0 ]; then nvim .; else nvim "$@"; fi; }

# Git
alias g='git'
alias gcm='git commit -m'
alias gcam='git commit -a -m'
alias gcad='git commit -a --amend'

# Lazygit
alias lg='lazygit'

# Lazydocker
alias ld='lazydocker'

snap() {
  sudo snapper create --description "$1"
}

# Ollama service shortcuts
alias ollama-start='sudo systemctl start ollama'
alias ollama-stop='sudo systemctl stop ollama'
alias ollama-status='systemctl status ollama'

# Ollama model shortcuts
alias qwen='ollama run qwen2.5:3b'
alias qwen-code='ollama run qwen2.5-coder:3b'

# Switch New Generations
alias nix-switch='sudo nixos-rebuild switch --flake ~/nixos-config#'

# Update flake inputs (update packages)
alias nix-update='nix flake update ~/nixos-config'

# Update + Switch sekaligus
alias nix-upgrade='nix flake update ~/nixos-config && sudo nixos-rebuild switch --flake ~/nixos-config#'

# Clean Generations Old
alias nix-clean='sudo nix-collect-garbage --delete-old'

# Sync boot entries
alias nix-sync='sudo nixos-rebuild boot --flake ~/nixos-config#'

# Optimize nix store (bonus)
alias nix-optimize='sudo nix-store --optimize'

# List generations
alias nix-list='sudo nix-env --list-generations --profile /nix/var/nix/profiles/system'

# GPU Stats
alias gpu-stats='sudo intel_gpu_top'

# Cliphis wipe
alias cwipe='cliphist wipe'
